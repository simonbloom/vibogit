{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ViboGit",
  "version": "3.8.2",
  "identifier": "app.vibogit.desktop",
  "build": {
    "beforeDevCommand": {
      "script": "bun run dev",
      "cwd": "../frontend"
    },
    "beforeBuildCommand": {
      "script": "bun run build",
      "cwd": "../frontend"
    },
    "devUrl": "http://localhost:4158",
    "frontendDist": "../frontend/out"
  },
  "app": {
    "withGlobalTauri": true,
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "ViboGit",
        "label": "main",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "decorations": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "trafficLightPosition": {
          "x": 14,
          "y": 14
        },
        "transparent": false,
        "resizable": true
      }
    ],
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false
    },
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": [
      "dmg",
      "app"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.png"
    ],
    "category": "DeveloperTool",
    "shortDescription": "Git for the Vibe Coder",
    "longDescription": "ViboGit is a beautiful, simple Git client designed for developers who want to focus on building, not managing git commands.",
    "copyright": "\u00a9 2026 ViboGit",
    "macOS": {
      "minimumSystemVersion": "10.15",
      "signingIdentity": "-",
      "entitlements": "entitlements.plist"
    }
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDFBNjg1RTQ5NDQ2MEY0N0EKUldSNjlHQkVTVjVvR3I2dytKczVRYnpGNnFyVTFvQnFqckk5WWFtSGlhdW1DczFteGxpQytJY3EK",
      "endpoints": [
        "https://github.com/simonbloom/vibogit/releases/latest/download/latest.json"
      ]
    }
  }
}