{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ViboGit",
  "version": "2.2.4",
  "identifier": "app.vibogit.desktop",
  "build": {
    "beforeDevCommand": { "script": "bun run dev", "cwd": "../frontend" },
    "beforeBuildCommand": { "script": "bun run build", "cwd": "../frontend" },
    "devUrl": "http://localhost:3002",
    "frontendDist": "../frontend/out"
  },
  "app": {
    "withGlobalTauri": true,
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "ViboGit",
        "label": "main",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "decorations": true,
        "transparent": false,
        "resizable": true
      }
    ],
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false
    },
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.png"
    ],
    "category": "DeveloperTool",
    "shortDescription": "Git for the Vibe Coder",
    "longDescription": "ViboGit is a beautiful, simple Git client designed for developers who want to focus on building, not managing git commands.",
    "copyright": "Â© 2026 ViboGit",
    "macOS": {
      "minimumSystemVersion": "10.15",
      "signingIdentity": "-",
      "entitlements": "entitlements.plist"
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
